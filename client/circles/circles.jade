
template(name='circles')
  h3 Circles

  each circles
    | {{> circle}}

  div.col-sm-6
    |   {{ > circles_form }}

    
template(name= 'circle_show')
  | {{> circle circleData }}
  
template(name='circles_form')
  | {{> quickForm collection="Circles" id="insertCircleForm" type="insert" class="form" }}


template(name= 'circle')
  div.media
    div.media-left
      img.media-object.circle-icon-big(src= '/images/circle.png')
    div.media-body
      div.media-heading
        h3.panel-title 
          a(href="/circles/#{ _id }")
            {{ name }}

      p.lead {{ description }}
